#create-link-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content{id: 'create-link-modal-dialog'}
      .modal-body
        %button.close.font-white{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
          .font-white
            %strong x
        %h3.modal-title.font-white.text-center
          %strong Share or Review a Dish
        .row
          .col-md-12
            %p.font-white
              .text-center Share with others what you think of awesome dishes
        .tab-v1
          %ul.nav.nav-tabs
            %li.active
              %a{"data-toggle" => "tab", href: "#share"} Share
            %li
              %a{"data-toggle" => "tab", href: "#review"} Review

          .tab-content
            #share.tab-pane.active
              .row
                .col-md-12
                  %h3.text-center
                    Share a dish
              .row
                .col-md-4
                  %img.img-responsive.img-tab-space{alt: "", src: "assets/img/new/img4.jpg"}/
                .col-md-8
              .row
                .col-md-12
                  =form_tag add_food_path, class: 'from form-horizontal' do 
                    .form-group
                      =label_tag 'Name of the dish',nil, class: 'control-label col-md-4'
                      .col-md-8
                        =text_field_tag :nod,'',class: 'form-control'
                    .form-group
                      =label_tag 'Outlet',nil, class: 'control-label col-md-4'
                      .col-md-8
                        =select_tag :outlet_id, options_for_select(Outlet.all.collect{|o| [o.name, o.id]}), class: 'form-control'
                    .form-group
                      =label_tag 'Review', nil, class: 'control-label col-md-4'
                      .col-md-8
                        =text_area_tag :comment, '', class: 'form-control', placeholder: 'Review about the whole meal experience'
                    .form-group
                      .col-md-4.col-md-offset-4
                        =submit_tag 'Submit', class: 'btn btn-success'  
            #review.tab-pane
              .row
                .col-md-12
                  %h3.text-center
                    Review a Dish