/ === Header ===
.header{id: 'header'}
  .navbar.navbar-default{role: "navigation"}
    .container
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: root_path}
          =image_tag('logo1-default.png')
      / Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav
          %li.divider
          %li
            =link_to (fa_icon "plus-circle", class: 'color-light-green', text: 'Share / Review a Dish'), '#', class: 'color-light-green', id: 'submit-new-link','data-toggle'=>"modal" ,'data-target'=>"#create-link-modal", class: 'btn btn-success top-nav-create-btn'
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown",  href: foods_path}
              Home
          %li
            -if !user_signed_in?
              = link_to "Sign Up", new_user_registration_path

          %li
            - if user_signed_in?
              =link_to "My Account",current_user 
              
          %li
            - if user_signed_in?
              =link_to 'Sign out', destroy_user_session_path, method: :delete
            -else
              =link_to('Login', new_user_session_path)

          %li.dropdown
            -# %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", href: opportunities_path}
            -# Opportunities
          
          %li.dropdown
            -#if user_signed_in?
              -#%a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", href: edit_user_path(current_user.id)}
                -#Profile
            -#else
              -#%a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", href: new_user_registration_path}
                -#Register
  
          / /input-group
      / /navbar-collapse
/ /header
