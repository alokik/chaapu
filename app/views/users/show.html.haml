.row	
	.col-md-3.col-md-offset-1
	.col-md-7
		-@dishes.each_with_index do |d, i|
			%div{class: ("row" if (i+1)%3==0)}
				.col-md-4
					.thumbnails.thumbnail-style
						%a.fancybox-button.zoomer{"data-rel" => "fancybox-button", href: "#{image_path('dish1.jpg')}", title: "Project #1"}
							%span.overlay-zoom
								=image_tag('dish1.jpg', class: 'img-responsive')
								.zoom-icon
						.caption
							%h3
								%a.hover-effect{href: "#"} 
									= d.name
							%p Donec id elit non mi porta gravida at eget metus. Fusce dapibus, justo sit amet risus etiam porta sem.
			
