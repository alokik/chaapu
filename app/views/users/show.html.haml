.row
	.margin-bottom-20
	.col-md-10.col-md-offset-1
		.panel.panel-default
			.panel-heading
				.text-center
					%strong Current status
			.panel-body
				.row
					.col-md-4
						.text-center
							Karma Earned - 120 
					.col-md-4
						.text-center
